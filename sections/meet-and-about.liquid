<div class="meet-about-wrapper container full-width">

  <h3 class="meet-about-title wow fadeInUp" style="color:{{ section.settings.page-text-color }}">{{ page.title | remove: "-PHILLIP"}}</h3>
  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'image-text-side' %}
      <div class="image-text-content-wrapper" style="background-color:{{ block.settings.image-text-bg-color }}">
        <div class="image-text-content-container container full-width">
        {% if block.settings.image_text_alignment == "image-right" %}

            <div class="text-side-content one-half-cgc" >
              <div class="meet-text-content">
                <h2 style="color:{{ block.settings.text-side-color }}; border-bottom: 4px solid {{ block.settings.text-side-color}}">
                  {{ block.settings.image-text-header }}
                </h2>
                <div class="text-value" style="color:{{ block.settings.text-side-color }}">{{ block.settings.section-content }}</div>
              </div>
            </div>
            <div class="image-side-content one-half-cgc" style="float: right;">
              <img src="{{ block.settings.image-side-content | img_url: '1000x' }}" alt="">
            </div>

        {% else %}

            <div class="image-side-content one-half-cgc">
              <img src="{{ block.settings.image-side-content | img_url: '1000x' }}" alt="">
            </div>
            <div class="text-side-content one-half-cgc" style="float: right;" >
              <div class="meet-text-content">
                <h2 style="color:{{ block.settings.text-side-color }}; border-bottom: 4px solid {{ block.settings.text-side-color}}">
                  {{ block.settings.image-text-header }}
                </h2>
                <div class="text-value" style="color:{{ block.settings.text-side-color }}">{{ block.settings.section-content }}</div>
              </div>
            </div>

        {% endif %}
         </div>
      </div>


      {% when 'video-text-side'%}

        <div class="video-section-wrapper" style="background-color:{{ block.settings.video-section-bg-color }}">
          <div class="video-section-container container full-width meet-about-video-container">

            {% if block.settings.video_text_alignment == "video-right" %}

              <div class="text-side-video one-half-cgc" >
                <div class="meet-text-content">
                  <h2 style="color:{{ block.settings.video-side-color }}; border-bottom: 4px solid {{ block.settings.video-side-color}}">
                    {{ block.settings.video-text-header }}
                  </h2>
                  <div class="text-value" style="color:{{ block.settings.video-side-color }}">{{ block.settings.video-section-content }}</div>
                </div>
              </div>
              <div class="video-side-content one-half-cgc meet-about-video-side-content" style="float: right;">
                  <!-- Copy & Pasted from YouTube -->
                  <div class="videoWrapper">
                      <iframe width="100%" height="" src="{{ block.settings.video-url }}" frameborder="0" allowfullscreen allow="autoplay"></iframe>
                  </div>
              </div>

            {% else %}

            <div class="video-side-content one-half-cgc meet-about-video-side-content">
                <!-- Copy & Pasted from YouTube -->
                <div class="videoWrapper">
                    <iframe width="100%" height="" src="{{ block.settings.video-url }}" frameborder="0" allowfullscreen allow="autoplay"></iframe>
                </div>
            </div>
            <div class="text-side-video one-half-cgc" style="float: right;">
              <div class="meet-text-content">
                <h2 style="color:{{ block.settings.video-side-color }}; border-bottom: 4px solid {{ block.settings.video-side-color}}">
                  {{ block.settings.video-text-header }}
                </h2>
                <div class="text-value" style="color:{{ block.settings.video-side-color }}">{{ block.settings.video-section-content }}</div>
              </div>
            </div>

             {% endif %}

