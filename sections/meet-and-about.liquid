            {%- endif -%}

            <!-- Team member two bio image -->
            {%- if block.settings.team-member-bio-image-two -%}
              {%- assign bio-pic-two = block.settings.team-member-bio-image-two | img_url: '500x' -%}
            {%- else -%}
